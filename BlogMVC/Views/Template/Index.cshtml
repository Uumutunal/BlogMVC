    ViewBag.Title = "Blogy â€” Free Bootstrap 5 Website Template by Untree.co";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.png")">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap5" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="@Url.Content("~/fonts/icomoon/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/fonts/flaticon/font/flaticon.css")">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="@Url.Content("~/css/tiny-slider.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/aos.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/glightbox.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/flatpickr.min.css")">

    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- Preloader -->
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>


    <!--Header-->
    <nav class="site-nav">
        <div class="container">
            <div class="menu-bg-wrap">
                <div class="site-navigation">
                    <div class="row g-0 align-items-center">
                        <div class="col-2">
                            <a href="@Url.Action("Index", "Home")" class="logo m-0 float-start">Blogy<span class="text-primary">.</span></a>
                        </div>
                        <div class="col-8 text-end">


                            <ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu ms-auto">
                                @if (ViewBag.Logged == "false" || ViewBag.Logged == null)
                                {
                                    <li><a href="@Url.Action("Login", "Account")">Login</a></li>
                                    <li><a href="@Url.Action("Register", "Account")">Register</a></li>
                                }
                                @if (ViewBag.Logged == "true")
                                {
                                    <li><a href="@Url.Action("Profile", "Account")">Profile</a></li>
                                    @if (ViewBag.Role == "Admin")
                                    {
                                        <li class="has-children">
                                            <a href="@Url.Action("ListUnapprovedPosts", "Home")">Admin Panel</a>
                                            <ul class="dropdown">
                                                <li><a href="@Url.Action("ListUnapprovedPosts", "Home")">Unapproved Posts</a></li>
                                                <li><a href="@Url.Action("ListUnapprovedComments", "Home")">Unapproved Comments</a></li>
                                                <li><a href="@Url.Action("ListCategories", "Home")">Categories</a></li>
                                                <li><a href="@Url.Action("ListRoles", "Home")">Roles</a></li>
                                                <li><a href="@Url.Action("AssignRole", "Home")">Assign Role</a></li>

                                            </ul>
                                        </li>
                                    }

                                    @if (ViewBag.Role == "Editor")
                                    {
                                        <li class="has-children">
                                            <a href="@Url.Action("ListUnapprovedPosts", "Home")">Editor Panel</a>
                                            <ul class="dropdown">
                                                <li><a href="@Url.Action("ListUnapprovedPosts", "Home")">Unapproved Posts</a></li>
                                                <li><a href="@Url.Action("ListUnapprovedComments", "Home")">Unapproved Comments</a></li>
                                                <li><a href="@Url.Action("ListCategories", "Home")">Categories</a></li>

                                            </ul>
                                        </li>
                                    }
                                    else if(ViewBag.Role == "Editor")
                                    {
                                        <li class="has-children">
                                            <a href="@Url.Action("ListUnapprovedPosts", "Home")">Editor Panel</a>
                                            <ul class="dropdown">
                                                <li><a href="@Url.Action("ListUnapprovedPosts", "Home")">Unapproved Posts</a></li>
                                                <li><a href="@Url.Action("ListUnapprovedComments", "Home")">Unapproved Comments</a></li>
                                                <li><a href="@Url.Action("ListCategories", "Home")">Categories</a></li>
                                            </ul>
                                        </li>

                                    }
                                    else if(ViewBag.Role == "Author")
                                    {
                                        <li><a href="@Url.Action("GetAllIsDraft", "Home")">Draft Post</a></li>
                                    }
                                    else if (ViewBag.Role == "Subscriber")
                                    {
                                        <li><a href="@Url.Action("GetUserNotifications", "Home")">Notifications</a></li>
                                        <li><a href="@Url.Action("GetAllFavoritePosts", "Home")">Favorites</a></li>
                                    }
                                    <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                                }

                            </ul>
                        </div>
                        @* 						<div class="col-2 text-end">
                        <a href="#" class="burger ms-auto float-end site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
                        <span></span>
                        </a>
                        <form action="#" class="search-form d-none d-lg-inline-block">
                        <input type="text" class="form-control" placeholder="Search...">
                        <span class="bi-search"></span>
                        </form>
                        </div> *@

                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!--Header end-->
    <!-- End posts-entry -->
    @RenderBody() <!-- This is where the view content will be inserted -->
    @* @RenderSection("scripts", required: false) <!-- This is for additional scripts from views --> *@






    <!-- start footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="widget">
                        <h3 class="mb-4">About</h3>
                        <p>
                            Welcome to our blog, a collaborative space where a team of passionate developers and tech enthusiasts come together to share knowledge, insights, and experiences. We are a diverse group, united by our love for technology, coding, and continuous learning.

                            Our team consists of professionals from various backgrounds, including software development, web technologies, and system architecture. Through this platform, we aim to provide valuable content on a wide range of topics, from programming tutorials to industry trends and project insights.

                            Whether you're a beginner or an experienced developer, we hope to inspire and engage with our readers by sharing practical solutions and innovative ideas.

                            Thank you for being a part of our community!
                        </p>
                    </div> <!-- /.widget -->                   
                </div> <!-- /.col-lg-4 -->
               
                

            <div class="row mt-5">
                <div class="col-12 text-center">
                    <!--
                        **==========
                        NOTE:
                        Please don't remove this copyright link unless you buy the license here https://untree.co/license/
                        **==========
                      -->

                    <p>
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script>. All Rights Reserved. &mdash; Designed with love
                    </p>
                </div>
            </div>
        </div> <!-- /.container -->
    </footer> <!-- /.site-footer -->
    <!-- end footer -->


    <script src="@Url.Content("~/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/tiny-slider.js")"></script>
    <script src="@Url.Content("~/js/flatpickr.min.js")"></script>
    <script src="@Url.Content("~/js/aos.js")"></script>
    <script src="@Url.Content("~/js/glightbox.min.js")"></script>
    <script src="@Url.Content("~/js/navbar.js")"></script>
    <script src="@Url.Content("~/js/counter.js")"></script>
    <script src="@Url.Content("~/js/custom.js")"></script>
</body>
</html>
