@model List<NotificationViewModel>

@{
    Layout = "~/Views/Template/Index.cshtml";
}


<section class="section">
    <div class="container">

        <h2>Bildirimler</h2>

        <ul>
            @foreach (var notification in Model.Where(n => !n.IsRead))
            {
                <div>
                    <p>@notification.Message</p>
                    <small>@Html.DisplayFor(model => notification.CreatedDate, "{0:dd.MM.yyyy HH:mm}")</small>
                </div>
                <br />
                <br />
            }
            <form asp-action="EditNotification"  method="post">
                <div class="form-group">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <input type="hidden" id="id" name="id" value="@Model[i].Id">
                    }
                    @if (Model.Count != 0)
                    {
                        <input type="submit" value="Mark as Read" class="btn btn-primary">
                    }

                </div>
            </form>
        </ul>
    </div>
</section>

