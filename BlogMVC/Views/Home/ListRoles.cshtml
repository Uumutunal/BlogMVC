@{
    ViewBag.Title = "ListRoles";
    Layout = "~/Views/Template/Index.cshtml";

}


@model List<string>

<section class="section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-sm-6">
                <h2 class="posts-entry-title">Politics</h2>
            </div>
            <div class="col-sm-6 text-sm-end">
                <a href="category.html" class="read-more">View All</a>
            </div>
        </div>
        <form asp-action="AddRole" method="post">
            <div class="form-group mb-3">
                <label for="Username">Role Name</label>
                <input type="text" id="role" name="role" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <button  type="submit" class="btn btn-primary">Add Role</button>
            </div>

            @* <a href="@Url.Action("ApprovePost", new { Id = @item.Id })" class="read-more text-danger">Approve</a> *@

        </form>
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="post-entry-alt">

                        <div class="excerpt">
                            <h2><a>@item</a></h2>
                            
                        </div>
                    </div>
                </div>
            }
    </div>
</section>