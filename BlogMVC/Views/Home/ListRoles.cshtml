@{
    ViewBag.Title = "ListRoles";
    Layout = "~/Views/Template/Index.cshtml";

}


@model List<string>

<section class="section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-sm-6">
                <h2 class="posts-entry-title">Roles Management</h2>
            </div>
        </div>

        <!-- Form to Add Role -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Add New Role</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddRole" method="post">
                    <div class="form-group mb-3">
                        <label for="role" class="form-label">Role Name</label>
                        <input type="text" id="role" name="role" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Role</button>
                </form>
            </div>
        </div>

        <!-- Form to Delete Role -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Delete Role</h5>
            </div>
            <div class="card-body">
                <form asp-action="DeleteRole" method="post">
                    <div class="form-group mb-3">
                        <label for="RoleSelect" class="form-label">Select Role to Delete</label>
                        <select id="RoleSelect" name="selectedRole" class="form-select" required>
                            <option value="">--Select Role--</option>
                            @foreach (var item in Model)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-danger">Delete Selected Role</button>
                </form>
            </div>
        </div>

        <!-- Role Listing -->
        <div class="mt-4">
            <h4 class="mb-3">Role List</h4>
            <div class="list-group">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <a href="#" class="list-group-item list-group-item-action">
                            @item
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">No roles available.</p>
                }
            </div>
        </div>
    </div>
</section>
